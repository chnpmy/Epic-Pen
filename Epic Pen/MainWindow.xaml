<Window x:Class="Epic_Pen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="1000" Opacity="1" AllowsTransparency="True" WindowStyle="None" WindowState="Normal" Topmost="True" Loaded="Window_Loaded" Background="#01FFFFFF" ShowInTaskbar="False">
    <Grid>
          <ScrollViewer>
            <StackPanel  x:Name="TextPart" >
                <InkCanvas x:Name="inkCanvas" Background="{x:Null}" Height="450" Width="800" MouseDown="CanvasMouseDown" MouseUp="CanvasMouseUp"/>
                </StackPanel>
          </ScrollViewer>
    </Grid>
</Window>
